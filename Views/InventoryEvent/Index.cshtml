@model IEnumerable<AzureStorageWebApplication.Models.InventoryEvent>

@{
    ViewData["Title"] = "Inventory Events";
}

<h2 class="mb-4">Inventory Events</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Add New Event</a>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Action</th>
         
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product</td>
                <td>@item.Quantity</td>
                <td>@item.Action</td>
           
            </tr>
        }
    </tbody>
</table>
