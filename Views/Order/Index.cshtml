@model IEnumerable<AzureStorageWebApplication.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerName</td>
                <td>@order.ProductTitle</td>
                <td>@order.Quantity</td>
                <td>
                    @if (order.Status == "Queued")
                    {
                        <span class="badge bg-warning text-dark">@order.Status</span>
                    }
                    else if (order.Status == "Processing")
                    {
                        <span class="badge bg-info">@order.Status</span>
                    }
                    else if (order.Status == "Completed")
                    {
                        <span class="badge bg-success">@order.Status</span>
                    }
                    else if (order.Status == "Cancelled")
                    {
                        <span class="badge bg-danger">@order.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@order.Status</span>
                    }
                </td>
                <td>@order.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
