@model AzureStorageWebApplication.Controllers.QueueDashboardViewModel
@{
    ViewData["Title"] = "Queue Dashboard";
}

<h2 class="mb-4">Queue Dashboard</h2>

<div class="row">
    <!-- Orders Queue -->
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Orders Queue</h5>
                <form asp-action="ClearQueue" asp-route-queueName="orders" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-light">Clear</button>
                </form>
            </div>
            <div class="card-body">
                @if (Model.Orders != null && Model.Orders.Any())
                {
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>OrderId</th>
                                <th>Customer</th>
                                <th>Product</th>
                                <th>Qty</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td>@order.OrderId</td>
                                    <td>@order.CustomerName</td>
                                    <td>@order.ProductTitle</td>
                                    <td>@order.Quantity</td>
                                    <td>@order.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No orders in the queue.</p>
                }
            </div>
        </div>
    </div>

    <!-- Inventory Queue -->
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Inventory Queue</h5>
                <form asp-action="ClearQueue" asp-route-queueName="inventory" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-light">Clear</button>
                </form>
            </div>
            <div class="card-body">
                @if (Model.InventoryEvents != null && Model.InventoryEvents.Any())
                {
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Action</th>
                             
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var inv in Model.InventoryEvents)
                            {
                                <tr>
                                    <td>@inv.Product</td>
                                    <td>@inv.Quantity</td>
                                    <td>@inv.Action</td>
                             
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No inventory events in the queue.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="text-end mt-3">
    <a asp-action="Index" class="btn btn-secondary">Refresh</a>
</div>
