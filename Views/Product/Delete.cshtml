@model AzureStorageWebApplication.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this product?</h3>

<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price (ZAR)</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-ZA"))</dd>

        <dt class="col-sm-2">Inventory</dt>
        <dd class="col-sm-10">@Model.Inventory</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="RowKey" name="id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

